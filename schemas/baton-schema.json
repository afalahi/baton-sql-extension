{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "app_name": {
      "type": "string",
      "description": "Application name for the Finance DB connector"
    },
    "app_description": {
      "type": "string",
      "description": "Optional description of the application"
    },
    "connect": {
      "type": "object",
      "description": "Database connection configuration",
      "properties": {
        "dsn": {
          "type": "string",
          "description": "Database connection string",
          "pattern": "^[a-zA-Z0-9]+:\\/\\/.+:.+@.+:.+\\/.+$"
        },
        "username": {
          "type": "string",
          "description": "Database username (optional, can be embedded in DSN)"
        },
        "password": {
          "type": "string",
          "description": "Database password (optional, can be embedded in DSN)"
        }
      },
      "required": ["dsn"]
    },
    "resource_types": {
      "type": "object",
      "description": "Define resource types (users, groups, roles, etc.) that can be synced from your database",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": {
          "^static_entitlement$": {
            "type": "array",
            "errorMessage": "Did you mean 'static_entitlements'?"
          }
        },
        "properties": {
          "name": {
            "type": "string",
            "description": "Display name of the resource type"
          },
          "description": {
            "type": "string",
            "description": "Description of the resource type"
          },
          "list": {
            "type": "object",
            "description": "Configuration for listing resources of this type from the database",
            "additionalProperties": false,
            "properties": {
              "query": {
                "type": "string",
                "contentMediaType": "text/sql",
                "description": "SQL query to list resources"
              },
              "map": {
                "type": "object",
                "description": "Map database columns to Baton resource fields",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "Field mapping for resource ID"
                  },
                  "display_name": {
                    "type": "string",
                    "description": "Field mapping for display name"
                  },
                  "description": {
                    "type": "string",
                    "description": "Field mapping for description"
                  },
                  "traits": {
                    "type": "object",
                    "description": "Special attributes for different resource types (user, group, etc.)",
                    "properties": {
                      "user": {
                        "type": "object",
                        "description": "User-specific attributes for resources representing user accounts",
                        "additionalProperties": false,
                        "properties": {
                          "status": {
                            "type": "string",
                            "description": "User account status"
                          },
                          "status_details": {
                            "type": "string",
                            "description": "Detailed status information"
                          },
                          "login": {
                            "type": "string",
                            "description": "Login identifier for the user"
                          },
                          "emails": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "description": "List of email addresses"
                          },
                          "profile": {
                            "type": "object",
                            "additionalProperties": true,
                            "description": "User profile details - can contain any properties of any type"
                          },
                          "account_type": {
                            "type": "string",
                            "description": "Type of user account"
                          },
                          "employee_ids": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "description": "List of employee IDs"
                          },
                          "last_login": {
                            "type": "string",
                            "description": "Last login timestamp"
                          },
                          "manager_id": {
                            "type": "string",
                            "description": "ID of the user's manager"
                          },
                          "manager_email": {
                            "type": "string",
                            "description": "Email of the user's manager"
                          }
                        },
                        "required": [
                          "login",
                          "emails"
                        ]
                      }
                    },
                    "additionalProperties": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "profile": {
                          "type": "object",
                          "additionalProperties": true,
                          "description": "Profile details - can contain any properties of any type"
                        }
                      }
                    }
                  }
                },
                "required": ["id", "display_name"]
              },
              "pagination": {
                "type": "object",
                "description": "Configure pagination for large result sets",
                "additionalProperties": false,
                "properties": {
                  "strategy": {
                    "type": "string",
                    "description": "Pagination strategy: 'offset' for OFFSET/LIMIT or 'cursor' for cursor-based pagination",
                    "enum": ["offset", "cursor"]
                  },
                  "primary_key": {
                    "type": "string",
                    "description": "Primary key column name used for pagination"
                  }
                },
                "required": ["strategy", "primary_key"]
              }
            },
            "required": ["query", "map"]
          },
          "static_entitlements": {
            "type": "array",
            "description": "Statically defined entitlements that don't come from database queries. Example:\nstatic_entitlements:\n  - id: \"admin\"\n    display_name: \"Administrator\"",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Unique identifier for this entitlement"
                },
                "display_name": {
                  "type": "string",
                  "description": "Human-readable name shown in the Baton UI"
                },
                "description": {
                  "type": "string",
                  "description": "Detailed description of what this entitlement grants"
                },
                "purpose": {
                  "type": "string",
                  "description": "Purpose of the entitlement: 'assignment' (group membership), 'permission' (specific action), or 'access' (general access)",
                  "enum": ["assignment", "permission", "access"]
                },
                "grantable_to": {
                  "type": "array",
                  "description": "List of resource type names that can receive this entitlement (e.g., ['user'])",
                  "items": {
                    "type": "string"
                  }
                },
                "provisioning": {
                  "type": "object",
                  "description": "Optional SQL queries to execute when granting or revoking this entitlement",
                  "additionalProperties": false,
                  "properties": {
                    "vars": {
                      "type": "object",
                      "description": "Variables available in grant/revoke queries (e.g., principal.ID, resource.ID)",
                      "additionalProperties": {
                        "type": "string"
                      }
                    },
                    "grant": {
                      "type": "object",
                      "description": "SQL queries to execute when granting this entitlement",
                      "additionalProperties": false,
                      "properties": {
                        "queries": {
                          "type": "array",
                          "description": "Array of SQL statements to execute in order",
                          "items": {
                            "type": "string",
                            "contentMediaType": "text/sql"
                          }
                        }
                      },
                      "required": ["queries"]
                    },
                    "revoke": {
                      "type": "object",
                      "description": "SQL queries to execute when revoking this entitlement",
                      "additionalProperties": false,
                      "properties": {
                        "queries": {
                          "type": "array",
                          "description": "Array of SQL statements to execute in order",
                          "items": {
                            "type": "string",
                            "contentMediaType": "text/sql"
                          }
                        }
                      },
                      "required": ["queries"]
                    }
                  },
                  "required": ["grant", "revoke"]
                }
              },
              "required": [
                "id",
                "display_name",
                "description",
                "purpose",
                "grantable_to"
              ]
            }
          },
          "entitlements": {
            "type": "object",
            "description": "Query-based entitlements loaded from the database (e.g., groups, roles)",
            "additionalProperties": false,
            "properties": {
              "vars": {
                "type": "object",
                "description": "Variables available in the query (e.g., resource.ID for parameterized queries)",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "query": {
                "type": "string",
                "contentMediaType": "text/sql",
                "description": "SQL query to list entitlements"
              },
              "map": {
                "type": "array",
                "description": "Map query result columns to entitlement fields. Can have multiple mappings with conditional logic.",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "skip_if": {
                      "type": "string",
                      "description": "Conditional expression - skip this mapping if the condition is true (e.g., 'status == \"disabled\"')"
                    },
                    "id": {
                      "type": "string",
                      "description": "Expression or column name for the entitlement ID"
                    },
                    "display_name": {
                      "type": "string",
                      "description": "Expression or column name for the display name"
                    },
                    "description": {
                      "type": "string",
                      "description": "Expression or column name for the description"
                    },
                    "purpose": {
                      "type": "string",
                      "description": "Purpose of the entitlement: 'assignment', 'permission', or 'access'",
                      "enum": ["assignment", "permission", "access"]
                    },
                    "grantable_to": {
                      "type": "array",
                      "description": "List of resource type names that can receive this entitlement",
                      "items": {
                        "type": "string"
                      }
                    },
                    "slug": {
                      "type": "string",
                      "description": "URL-friendly identifier derived from the entitlement name"
                    }
                  },
                  "required": [
                    "id",
                    "display_name",
                    "description",
                    "purpose",
                    "grantable_to"
                  ]
                }
              }
            },
            "required": ["query", "map"]
          },
          "grants": {
            "type": "array",
            "description": "Define how to query grants (relationships between principals and entitlements)",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "vars": {
                  "type": "object",
                  "description": "Variables available in the query",
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "query": {
                  "type": "string",
                  "description": "SQL query to list grants (who has which entitlements)",
                  "contentMediaType": "text/sql"
                },
                "map": {
                  "type": "array",
                  "description": "Map query results to grant relationships",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "skip_if": {
                        "type": "string",
                        "description": "Conditional expression - skip this grant if the condition is true"
                      },
                      "principal_id": {
                        "type": "string",
                        "description": "Expression or column name for the principal (user/group) ID"
                      },
                      "principal_type": {
                        "type": "string",
                        "description": "Expression or column name for the principal type (e.g., 'user')"
                      },
                      "entitlement_id": {
                        "type": "string",
                        "description": "Expression or column name for the entitlement ID being granted"
                      },
                      "expandable": {
                        "type": "object",
                        "description": "Configuration for expandable grants (grants that recursively include other entitlements)",
                        "additionalProperties": false,
                        "properties": {
                          "entitlement_ids": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "description": "Array of entitlement IDs for expandable grants"
                          },
                          "shallow": {
                            "type": "boolean",
                            "description": "Whether to perform shallow expansion"
                          }
                        },
                        "required": ["entitlement_ids", "shallow"]
                      }
                    },
                    "required": [
                      "principal_id",
                      "principal_type",
                      "entitlement_id"
                    ]
                  }
                },
                "pagination": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "strategy": {
                      "type": "string",
                      "enum": ["offset", "cursor"]
                    },
                    "primary_key": {
                      "type": "string"
                    }
                  },
                  "required": ["strategy", "primary_key"]
                }
              },
              "required": ["query", "map"]
            }
          },
          "account_provisioning": {
            "type": "object",
            "description": "Account provisioning configuration - should only be used with resource types that have user traits",
            "additionalProperties": false,
            "properties": {
              "schema": {
                "type": "array",
                "description": "Define form fields shown when provisioning new accounts",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Field name (used as variable in SQL queries)"
                    },
                    "description": {
                      "type": "string",
                      "description": "Help text shown to user filling out the form"
                    },
                    "type": {
                      "type": "string",
                      "description": "Data type for validation",
                      "enum": ["string", "int", "boolean"]
                    },
                    "placeholder": {
                      "type": "string",
                      "description": "Placeholder text shown in empty field"
                    },
                    "required": {
                      "type": "boolean",
                      "description": "Whether this field must be filled out"
                    }
                  },
                  "required": ["name", "description", "type", "placeholder", "required"]
                }
              },
              "credentials": {
                "type": "object",
                "description": "Configure how passwords are handled during account creation",
                "oneOf": [
                  {
                    "additionalProperties": false,
                    "properties": {
                      "no_password": {
                        "type": "object",
                        "description": "Don't set a password (e.g., for SSO-only accounts)",
                        "additionalProperties": false,
                        "properties": {
                          "preferred": {
                            "type": "boolean",
                            "description": "Whether this is the preferred credential strategy"
                          }
                        }
                      }
                    },
                    "required": ["no_password"]
                  },
                  {
                    "additionalProperties": false,
                    "properties": {
                      "random_password": {
                        "type": "object",
                        "description": "Generate a random password",
                        "additionalProperties": false,
                        "properties": {
                          "max_length": {
                            "type": "number",
                            "description": "Maximum password length",
                            "minimum": 1
                          },
                          "min_length": {
                            "type": "number",
                            "description": "Minimum password length",
                            "minimum": 1
                          },
                          "preferred": {
                            "type": "boolean",
                            "description": "Whether this is the preferred credential strategy"
                          }
                        },
                        "required": ["max_length", "min_length", "preferred"]
                      }
                    },
                    "required": ["random_password"]
                  },
                  {
                    "additionalProperties": false,
                    "properties": {
                      "encrypted_password": {
                        "type": "object",
                        "description": "User provides an already encrypted password",
                        "additionalProperties": false,
                        "properties": {
                          "preferred": {
                            "type": "boolean",
                            "description": "Whether this is the preferred credential strategy"
                          }
                        },
                        "required": ["preferred"]
                      }
                    },
                    "required": ["encrypted_password"]
                  }
                ]
              },
              "validate": {
                "type": "object",
                "description": "SQL query to validate account before creation (e.g., check for duplicates)",
                "additionalProperties": false,
                "properties": {
                  "vars": {
                    "type": "object",
                    "description": "Variables available in the validation query",
                    "additionalProperties": {
                      "type": "string"
                    }
                  },
                  "query": {
                    "type": "string",
                    "description": "SQL query that should return no rows if validation passes",
                    "contentMediaType": "text/sql"
                  }
                },
                "required": ["query"]
              },
              "create": {
                "type": "object",
                "description": "SQL queries to execute to create the new account",
                "additionalProperties": false,
                "properties": {
                  "vars": {
                    "type": "object",
                    "description": "Variables from the provisioning form available in queries",
                    "additionalProperties": {
                      "type": "string"
                    }
                  },
                  "queries": {
                    "type": "array",
                    "description": "Array of SQL statements to execute in order to create the account",
                    "items": {
                      "type": "string",
                      "contentMediaType": "text/sql"
                    }
                  }
                },
                "required": ["queries"]
              }
            },
            "required": ["schema"]
          },
          "credential_rotation": {
            "type": "object",
            "description": "Password rotation configuration for existing user accounts",
            "additionalProperties": false,
            "properties": {
              "credentials": {
                "type": "object",
                "description": "Configure how new passwords are generated during rotation",
                "oneOf": [
                  {
                    "additionalProperties": false,
                    "properties": {
                      "no_password": {
                        "type": "object",
                        "description": "Don't set a password (e.g., for SSO-only accounts)",
                        "additionalProperties": false,
                        "properties": {
                          "preferred": {
                            "type": "boolean",
                            "description": "Whether this is the preferred credential strategy"
                          }
                        }
                      }
                    },
                    "required": ["no_password"]
                  },
                  {
                    "additionalProperties": false,
                    "properties": {
                      "random_password": {
                        "type": "object",
                        "description": "Generate a random password",
                        "additionalProperties": false,
                        "properties": {
                          "max_length": {
                            "type": "number",
                            "description": "Maximum password length",
                            "minimum": 1
                          },
                          "min_length": {
                            "type": "number",
                            "description": "Minimum password length",
                            "minimum": 1
                          },
                          "preferred": {
                            "type": "boolean",
                            "description": "Whether this is the preferred credential strategy"
                          }
                        },
                        "required": ["max_length", "min_length", "preferred"]
                      }
                    },
                    "required": ["random_password"]
                  },
                  {
                    "additionalProperties": false,
                    "properties": {
                      "encrypted_password": {
                        "type": "object",
                        "description": "User provides an already encrypted password",
                        "additionalProperties": false,
                        "properties": {
                          "preferred": {
                            "type": "boolean",
                            "description": "Whether this is the preferred credential strategy"
                          }
                        },
                        "required": ["preferred"]
                      }
                    },
                    "required": ["encrypted_password"]
                  }
                ]
              },
              "update": {
                "type": "object",
                "description": "SQL queries to execute to rotate the user's password",
                "additionalProperties": false,
                "properties": {
                  "vars": {
                    "type": "object",
                    "description": "Variables available in the update queries (e.g., resource.ID, password)",
                    "additionalProperties": {
                      "type": "string"
                    }
                  },
                  "queries": {
                    "type": "array",
                    "description": "Array of SQL statements to execute in order to update the password",
                    "items": {
                      "type": "string",
                      "contentMediaType": "text/sql"
                    }
                  }
                },
                "required": ["queries"]
              }
            },
            "required": ["credentials", "update"]
          }
        },
        "required": ["name", "description", "list"]
      }
    },
    "static_entitlements": {
      "type": "array",
      "description": "Global statically defined entitlements that don't come from database queries",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for this entitlement"
          },
          "display_name": {
            "type": "string",
            "description": "Human-readable name shown in the Baton UI"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of what this entitlement grants"
          },
          "purpose": {
            "type": "string",
            "description": "Purpose of the entitlement: 'assignment' (group membership), 'permission' (specific action), or 'access' (general access)",
            "enum": ["assignment", "permission", "access"]
          },
          "grantable_to": {
            "type": "array",
            "description": "List of resource type names that can receive this entitlement",
            "items": {
              "type": "string"
            }
          },
          "provisioning": {
            "type": "object",
            "description": "Optional SQL queries to execute when granting or revoking this entitlement",
            "additionalProperties": false,
            "properties": {
              "vars": {
                "type": "object",
                "description": "Variables available in grant/revoke queries",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "grant": {
                "type": "object",
                "description": "SQL queries to execute when granting this entitlement",
                "additionalProperties": false,
                "properties": {
                  "queries": {
                    "type": "array",
                    "description": "Array of SQL statements to execute in order",
                    "items": {
                      "type": "string",
                      "contentMediaType": "text/sql"
                    }
                  }
                },
                "required": ["queries"]
              },
              "revoke": {
                "type": "object",
                "description": "SQL queries to execute when revoking this entitlement",
                "additionalProperties": false,
                "properties": {
                  "queries": {
                    "type": "array",
                    "description": "Array of SQL statements to execute in order",
                    "items": {
                      "type": "string",
                      "contentMediaType": "text/sql"
                    }
                  }
                },
                "required": ["queries"]
              }
            }
          }
        },
        "required": [
          "id",
          "display_name",
          "description",
          "purpose",
          "grantable_to"
        ]
      }
    },
    "entitlements": {
      "type": "object",
      "description": "Global query-based entitlements loaded from the database",
      "additionalProperties": false,
      "properties": {
        "vars": {
          "type": "object",
          "description": "Variables available in the query",
          "additionalProperties": {
            "type": "string"
          }
        },
        "query": {
          "type": "string",
          "contentMediaType": "text/sql",
          "description": "SQL query to list entitlements"
        },
        "map": {
          "type": "array",
          "description": "Map query result columns to entitlement fields",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "skip_if": {
                "type": "string",
                "description": "Conditional expression - skip this mapping if true"
              },
              "id": {
                "type": "string",
                "description": "Expression or column name for the entitlement ID"
              },
              "display_name": {
                "type": "string",
                "description": "Expression or column name for the display name"
              },
              "description": {
                "type": "string",
                "description": "Expression or column name for the description"
              },
              "purpose": {
                "type": "string",
                "description": "Purpose of the entitlement",
                "enum": ["assignment", "permission", "access"]
              },
              "grantable_to": {
                "type": "array",
                "description": "List of resource type names that can receive this entitlement",
                "items": {
                  "type": "string"
                }
              },
              "slug": {
                "type": "string",
                "description": "URL-friendly identifier"
              }
            },
            "required": [
              "id",
              "display_name",
              "description",
              "purpose",
              "grantable_to"
            ]
          }
        }
      },
      "required": ["query", "map"]
    },
    "grants": {
      "type": "array",
      "description": "Global grant queries (who has which entitlements)",
      "items": {
        "type": "object",
        "properties": {
          "vars": {
            "type": "object",
            "description": "Variables available in the query",
            "additionalProperties": {
              "type": "string"
            }
          },
          "query": {
            "type": "string",
            "description": "SQL query to list grants",
            "contentMediaType": "text/sql"
          },
          "map": {
            "type": "array",
            "description": "Map query results to grant relationships",
            "items": {
              "type": "object",
              "properties": {
                "skip_if": {
                  "type": "string",
                  "description": "Conditional expression - skip this grant if true"
                },
                "principal_id": {
                  "type": "string",
                  "description": "Expression or column name for the principal ID"
                },
                "principal_type": {
                  "type": "string",
                  "description": "Expression or column name for the principal type"
                },
                "entitlement_id": {
                  "type": "string",
                  "description": "Expression or column name for the entitlement ID"
                },
                "expandable": {
                  "type": "object",
                  "description": "Configuration for expandable grants",
                  "additionalProperties": false,
                  "properties": {
                    "entitlement_ids": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Array of entitlement IDs for expandable grants"
                    },
                    "shallow": {
                      "type": "boolean",
                      "description": "Whether to perform shallow expansion"
                    }
                  },
                  "required": ["entitlement_ids", "shallow"]
                }
              },
              "required": ["principal_id", "principal_type", "entitlement_id"]
            }
          },
          "pagination": {
            "type": "object",
            "description": "Configure pagination for large result sets",
            "properties": {
              "strategy": {
                "type": "string",
                "description": "Pagination strategy: 'offset' or 'cursor'",
                "enum": ["offset", "cursor"]
              },
              "primary_key": {
                "type": "string",
                "description": "Primary key column name used for pagination"
              }
