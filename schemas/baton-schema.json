{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "app_name": {
      "type": "string",
      "description": "Application name for the Finance DB connector"
    },
    "app_description": {
      "type": "string",
      "description": "Optional description of the application"
    },
    "connect": {
      "type": "object",
      "description": "Database connection configuration",
      "properties": {
        "dsn": {
          "type": "string",
          "description": "Database connection string",
          "pattern": "^[a-zA-Z0-9]+:\\/\\/.+:.+@.+:.+\\/.+$"
        },
        "username": {
          "type": "string",
          "description": "Database username (optional, can be embedded in DSN)"
        },
        "password": {
          "type": "string",
          "description": "Database password (optional, can be embedded in DSN)"
        }
      },
      "required": ["dsn"]
    },
    "resource_types": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": {
          "^static_entitlement$": {
            "type": "array",
            "errorMessage": "Did you mean 'static_entitlements'?"
          }
        },
        "properties": {
          "name": {
            "type": "string",
            "description": "Display name of the resource type"
          },
          "description": {
            "type": "string",
            "description": "Description of the resource type"
          },
          "list": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "query": {
                "type": "string",
                "contentMediaType": "text/sql",
                "description": "SQL query to list resources"
              },
              "map": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "Field mapping for resource ID"
                  },
                  "display_name": {
                    "type": "string",
                    "description": "Field mapping for display name"
                  },
                  "description": {
                    "type": "string",
                    "description": "Field mapping for description"
                  },
                  "traits": {
                    "type": "object",
                    "properties": {
                      "user": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "status": {
                            "type": "string",
                            "description": "User account status"
                          },
                          "status_details": {
                            "type": "string",
                            "description": "Detailed status information"
                          },
                          "login": {
                            "type": "string",
                            "description": "Login identifier for the user"
                          },
                          "emails": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "description": "List of email addresses"
                          },
                          "profile": {
                            "type": "object",
                            "additionalProperties": true,
                            "description": "User profile details - can contain any properties of any type"
                          },
                          "account_type": {
                            "type": "string",
                            "description": "Type of user account"
                          },
                          "employee_ids": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "description": "List of employee IDs"
                          },
                          "last_login": {
                            "type": "string",
                            "description": "Last login timestamp"
                          },
                          "manager_id": {
                            "type": "string",
                            "description": "ID of the user's manager"
                          },
                          "manager_email": {
                            "type": "string",
                            "description": "Email of the user's manager"
                          }
                        },
                        "required": [
                          "login",
                          "emails"
                        ]
                      }
                    },
                    "additionalProperties": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "profile": {
                          "type": "object",
                          "additionalProperties": true,
                          "description": "Profile details - can contain any properties of any type"
                        }
                      }
                    }
                  }
                },
                "required": ["id", "display_name"]
              },
              "pagination": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "strategy": {
                    "type": "string",
                    "enum": ["offset", "cursor"]
                  },
                  "primary_key": {
                    "type": "string"
                  }
                },
                "required": ["strategy", "primary_key"]
              }
            },
            "required": ["query", "map"]
          },
          "static_entitlements": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string"
                },
                "display_name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "purpose": {
                  "type": "string",
                  "enum": ["assignment", "permission", "access"]
                },
                "grantable_to": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "id",
                "display_name",
                "description",
                "purpose",
                "grantable_to"
              ]
            }
          },
          "entitlements": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "vars": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "query": {
                "type": "string",
                "contentMediaType": "text/sql",
                "description": "SQL query to list entitlements"
              },
              "map": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "skip_if": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string"
                    },
                    "display_name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "purpose": {
                      "type": "string",
                      "enum": ["assignment", "permission", "access"]
                    },
                    "grantable_to": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "slug": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "display_name",
                    "description",
                    "purpose",
                    "grantable_to"
                  ]
                }
              }
            },
            "required": ["query", "map"]
          },
          "grants": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "vars": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "query": {
                  "type": "string",
                  "contentMediaType": "text/sql"
                },
                "map": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "skip_if": {
                        "type": "string"
                      },
                      "principal_id": {
                        "type": "string"
                      },
                      "principal_type": {
                        "type": "string"
                      },
                      "entitlement_id": {
                        "type": "string"
                      },
                      "expandable": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "entitlement_ids": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "description": "Array of entitlement IDs for expandable grants"
                          },
                          "shallow": {
                            "type": "boolean",
                            "description": "Whether to perform shallow expansion"
                          }
                        },
                        "required": ["entitlement_ids", "shallow"]
                      }
                    },
                    "required": [
                      "principal_id",
                      "principal_type",
                      "entitlement_id"
                    ]
                  }
                },
                "pagination": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "strategy": {
                      "type": "string",
                      "enum": ["offset", "cursor"]
                    },
                    "primary_key": {
                      "type": "string"
                    }
                  },
                  "required": ["strategy", "primary_key"]
                }
              },
              "required": ["query", "map"]
            }
          },
          "account_provisioning": {
            "type": "object",
            "description": "Account provisioning configuration - should only be used with resource types that have user traits",
            "additionalProperties": false,
            "properties": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string",
                      "enum": ["string", "number", "boolean"]
                    },
                    "placeholder": {
                      "type": "string"
                    },
                    "required": {
                      "type": "boolean"
                    }
                  },
                  "required": ["name", "description", "type", "placeholder", "required"]
                }
              },
              "credentials": {
                "type": "object",
                "oneOf": [
                  {
                    "additionalProperties": false,
                    "properties": {
                      "no_password": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "preferred": {
                            "type": "boolean"
                          }
                        }
                      }
                    },
                    "required": ["no_password"]
                  },
                  {
                    "additionalProperties": false,
                    "properties": {
                      "random_password": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "max_length": {
                            "type": "number",
                            "minimum": 1
                          },
                          "min_length": {
                            "type": "number",
                            "minimum": 1
                          },
                          "preferred": {
                            "type": "boolean"
                          }
                        },
                        "required": ["max_length", "min_length", "preferred"]
                      }
                    },
                    "required": ["random_password"]
                  }
                ]
              },
              "validate": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "vars": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string"
                    }
                  },
                  "query": {
                    "type": "string",
                    "contentMediaType": "text/sql"
                  }
                },
                "required": ["query"]
              },
              "create": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "vars": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string"
                    }
                  },
                  "queries": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "contentMediaType": "text/sql"
                    }
                  }
                },
                "required": ["queries"]
              }
            },
            "required": ["schema"]
          }
        },
        "required": ["name", "description", "list"]
      }
    },
    "static_entitlements": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "display_name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "purpose": {
            "type": "string",
            "enum": ["assignment", "permission", "access"]
          },
          "grantable_to": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "provisioning": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "vars": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "grant": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "queries": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "contentMediaType": "text/sql"
                    }
                  }
                },
                "required": ["queries"]
              },
              "revoke": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "queries": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "contentMediaType": "text/sql"
                    }
                  }
                },
                "required": ["queries"]
              }
            }
          }
        },
        "required": [
          "id",
          "display_name",
          "description",
          "purpose",
          "grantable_to"
        ]
      }
    },
    "entitlements": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "vars": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "query": {
          "type": "string",
          "contentMediaType": "text/sql",
          "description": "SQL query to list entitlements"
        },
        "map": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "skip_if": {
                "type": "string"
              },
              "id": {
                "type": "string"
              },
              "display_name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "purpose": {
                "type": "string",
                "enum": ["assignment", "permission", "access"]
              },
              "grantable_to": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "slug": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "display_name",
              "description",
              "purpose",
              "grantable_to"
            ]
          }
        }
      },
      "required": ["query", "map"]
    },
    "grants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "vars": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "query": {
            "type": "string",
            "contentMediaType": "text/sql"
          },
          "map": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "skip_if": {
                  "type": "string"
                },
                "principal_id": {
                  "type": "string"
                },
                "principal_type": {
                  "type": "string"
                },
                "entitlement_id": {
                  "type": "string"
                },
                "expandable": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "entitlement_ids": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Array of entitlement IDs for expandable grants"
                    },
                    "shallow": {
                      "type": "boolean",
                      "description": "Whether to perform shallow expansion"
                    }
                  },
                  "required": ["entitlement_ids", "shallow"]
                }
              },
              "required": ["principal_id", "principal_type", "entitlement_id"]
            }
          },
          "pagination": {
            "type": "object",
            "properties": {
              "strategy": {
                "type": "string",
                "enum": ["offset", "cursor"]
              },
              "primary_key": {
                "type": "string"
              }
            },
            "required": ["strategy", "primary_key"]
          }
        },
        "required": ["query", "map"]
      }
    }
  },
  "required": ["app_name", "connect", "resource_types"]
}
